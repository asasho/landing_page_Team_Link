      <div class = "button-2"><%= link_to "Team Linkの簡単ステップ", root_path(anchor: "step2"), :style => "color:white;" %></div>
    </div>
    <img src = "/assets/step2.jpg">
  </div>
</section>

<section>
  <div class = "section--title typesquare_tags">
